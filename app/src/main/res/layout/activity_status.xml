<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:padding="20dp"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/z1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/propic"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lpn_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/z2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/z1"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/greyish"
                    android:text="รหัสพนักงาน :" />

                <TextView
                    android:id="@+id/em_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:layout_weight="1"
                    android:text="TEST" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"

                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:layout_weight="2"
                    android:text="ชื่อ :" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:layout_weight="1"
                    android:text="TEST" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/greyish"
                    android:text="ตำแหน่ง :" />

                <TextView
                    android:id="@+id/txtMajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:layout_weight="1"
                    android:text="TEST" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:layout_weight="2"
                    android:text="ฝ่าย :" />

                <TextView
                    android:id="@+id/txtGroup"
                    android:layout_width="match_parent"
                    android:textColor="@color/greyish"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TEST" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/z3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sta1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/status"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statusin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status_in : "
                    android:textColor="@color/off_white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusinTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="@color/off_white"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sta2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/status"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statusout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status_out : "
                    android:textColor="@color/off_white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusoutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="@color/off_white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
